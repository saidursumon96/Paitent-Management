<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/main2"
            android:layout_height="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:textSize="17dp"
                android:id="@+id/appoinment_name"
                android:textColor="#000000"
                android:paddingLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/main2"
            android:paddingBottom="10dp"
            android:layout_toLeftOf="@+id/relativeLayout6"
            android:layout_toStartOf="@+id/relativeLayout6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Blood"
                android:paddingLeft="15dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/textView17"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Phone"
                android:layout_marginBottom="3dp"
                android:paddingLeft="15dp"
                android:id="@+id/textView21"
                android:layout_below="@+id/textView17"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Address"
                android:id="@+id/textView23"
                android:paddingLeft="15dp"
                android:layout_below="@+id/textView21"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout6"
            android:paddingBottom="10dp"
            android:layout_below="@+id/main2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="User Blood"
                android:id="@+id/diseases_diagnosis"
                android:layout_marginBottom="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="User Phone"
                android:id="@+id/diseases_treatment"
                android:layout_marginBottom="3dp"
                android:layout_below="@+id/diseases_diagnosis"
                android:layout_alignLeft="@+id/diseases_diagnosis"
                android:layout_alignStart="@+id/diseases_diagnosis" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="User Address"
                android:id="@+id/diseases_cause"
                android:layout_below="@+id/diseases_treatment"
                android:layout_alignLeft="@+id/diseases_treatment"
                android:layout_alignStart="@+id/diseases_treatment" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>